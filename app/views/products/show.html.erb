<div class="container">
  <%= link_to image_tag(@product.image_url, class: "img-fluid"), @product %>
  <div class="prod-desc">
    <h1 class="header">
      <%= @product.name %>
    </h1>

    <p wrap="hard">
      <%= @product.description %>
    </p>

    <p>
      <div class="rated" data-score="<%= @product.average_rating %>"></div>
    </p>

    <strong>Price:</strong>
    <h4>
      <%= number_to_currency(@product.price/100.to_f) %>
    </h4>
    <%= form_with(url: '/payments/create') do |form| %>
      <%= hidden_field_tag(:product_id, @product.id) %>
      <%= render partial: "shared/stripe_checkout_button" %>
    <% end %>
    <br>
    <% if signed_in? && current_user.admin? %>
      <%= link_to 'Edit', edit_product_path(@product) %> |
    <% end %>
    <%= link_to 'Back', products_path %>

  </div>
  <br>
  <br>
  <div class="col-lg-8">
    <%= render 'new_comment' %>
    <hr>
    <%= render 'comments' %>
  </div>
</div>
