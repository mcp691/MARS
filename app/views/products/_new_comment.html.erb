<% if signed_in? %>
  <h4>Leave review:</h4>
  <%= form_for([@product, @product.comments.build]) do |f| %>

    <p>
      <div class="rating"></div> <!-- Raty rating system -->
    </p>

    <p>
      <%= f.text_area :body, placeholder: "Review product here...", class: "form-control", rows: 5 %>
    </p>

    <p>
      <%= f.submit "Submit", class: "btn btn-dark" %>
    </p>
  <% end %>
<% end %>
