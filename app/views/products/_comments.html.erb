<div class="product-reviews">
  <h4>Reviews:</h4>
    <% @comments.each do |comment| %>
        <div class="comm-box">
            <p><%= comment.user.first_name %><small>
            <br>
            <em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small></p>
            <div class="rated" data-score="<%= comment.rating %>"></div>
            <br>
            <p><%= comment.body %></p>
        </div>
    <% end %>
</div>
