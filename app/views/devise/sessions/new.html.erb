<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="field">
  <br />
  <%= f.email_field :email, autofocus: true, placeholder: "E-mail address", class: "form-control", autocomplete: "email" %>
</div>

<div class="field">
  <br />
  <%= f.password_field :password, placeholder: "Password", class: "form-control", autocomplete: "off" %>
</div>

<% if devise_mapping.rememberable? -%>
<div class="field">
  <%= f.check_box :remember_me %>
  <%= f.label :remember_me %>
</div>
<% end -%>

<div class="actions">
  <%= f.submit "Log in", class: "btn btn-dark" %>
</div>
<% end %>

<%= render "devise/shared/links" %>
